<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuroraApp_MAUI.Views.ReservaPage"
             Title="ReservaPage">
    <VerticalStackLayout  BackgroundColor="Beige">
        <Label 
            Text="RESERVA:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Nombre: "
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Entry
            Text="A nombre de quien va la reserva"
            TextColor="Gray"/>
        <Label 
            Text="Fecha: "
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Entry
            Text="Fecha de la reserva"
            TextColor="Gray"/>
        <Label 
            Text="Hora de llegada"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Entry
            Text="Hora de llegada"
            TextColor="Gray"/>
        <Button
Text="Reservar"
x:Name="Reserva"
Clicked="Reserva_clicked"
HorizontalOptions="Center"
            BackgroundColor="Red"/>
        <Button
 x:Name="Regresar"
 Text="Regresar"
 Clicked="Regresar_Clicked"
 HorizontalOptions="Center" />
        




    </VerticalStackLayout>
</ContentPage>