<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuroraApp_MAUI.Views.MostrarReservas">

    <StackLayout>
        <ListView ItemsSource="{Binding ReservationList.Reservations}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding nombre}" FontAttributes="Bold"/>
                            <Label Text="{Binding numPersonas}" />
                            <Label Text="{Binding telefono}" />
                            <Label Text="{Binding fecha, StringFormat='{0:d}'}" />
                            <Label Text="{Binding horaLlegada, StringFormat='{0:hh\\:mm\\:ss tt}'}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
