<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuroraApp_MAUI.Views.MostrarReservas">

    <StackLayout BackgroundColor="Black">
        <Label Text="Reservas Realizadas:" TextColor="White" FontSize="Large"
               />
        <ListView ItemsSource="{Binding ReservationList.Reservations}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout HorizontalOptions="Center">
                            <Label Text="{Binding nombre}" FontAttributes="Bold" TextColor="White"/>
                            <Label Text="{Binding numPersonas}" TextColor="White" />
                            <Label Text="{Binding telefono}" TextColor="White" />
                            <Label Text="{Binding fecha, StringFormat='{0:d}'}" TextColor="White" />
                            <Label Text="{Binding horaLlegada, StringFormat='{0:hh\\:mm\\:ss tt}'}" TextColor="White" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button
  x:Name="Regresar"
  Text="Regresar"
  BackgroundColor="White"
  TextColor="Black"
  Clicked="Regresar_Clicked"
  HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
